{{nypr-ui/brand-header}}
{{#if model.splashPage}}
  {{django-page page=model.splashPage.pagecontent}}
{{/if}}

{{#if chromeDisabled}}
  {{outlet}}
{{else if miniChrome}}
  {{#nypr-mini-chrome promo='Tune in Mondayâˆ’Thursday at 8 p.m. ET'}}
    {{outlet}}
  {{/nypr-mini-chrome}}
{{else}}
  {{#site-chrome headerDonateChunk=headerDonateChunk isHomepage=isHomepage currentPath=currentPath showPlayer=showPlayer}}
    {{outlet}}
  {{/site-chrome}}
{{/if}}

{{#nypr-player-integration as |data|}}
  {{#liquid-if showPlayer class="nypr-player-wrapper"}}
    {{#liquid-if data.revealNotificationBar class='player-notification-wrapper'}}
      {{#data.notification}}
        {{player-notification/autoplay-message
          duration   = data.currentSound.duration
          position   = data.currentSound.position
          audioType  = data.currentAudioType
          isLoggedIn = session.isAuthenticated
        }}
      {{/data.notification}}
    {{/liquid-if}}

    {{#nypr-player
      currentTitle     = data.currentTitle
      backdropImageUrl = data.backdropImageUrl
      storyTitle       = data.storyTitle
      showTitle        = data.showTitle
      isAudiostream    = data.isStream
      as |content|}}
        {{#content.for 'trackInfo'}}
          {{nypr-player-integration/track-info
            currentAudio    = data.currentAudio
            showTitle       = data.showTitle
            showUrl         = data.showUrl
            storyTitle      = data.storyTitle
            storyUrl        = data.storyUrl
            audioId         = data.currentAudioId
            songDetails     = data.songDetails
            isStream        = data.isStream
            titleDidChange  = (action 'soundTitleDidChange')
          }}

          {{#unless hifi.isLoading}} {{! only show the share button when the audio has loaded}}
            {{#with data.currentAudio.shareMetadata as |share|}}
              {{#nypr-share-button
                text="SHARE"
                shareUrl=share.shareUrl
                shareText=share.shareText
                as |share|}}
                {{share.button
                  type='Facebook'}}
                {{share.button
                  type='Twitter'
                  via=(or meta.story.twitterHandle 'WQXR')}}
                {{share.button
                  type='Email'}}
              {{/nypr-share-button}}
            {{/with}}
          {{/unless}}
        {{/content.for}}

        {{#content.for 'streamInfo'}}
          {{nypr-player-integration/stream-info
            streamScheduleUrl = data.streamScheduleUrl
            streamPlaylistUrl = data.streamPlaylistUrl
            streamUrl         = data.streamUrl
            streamName        = data.streamName
          }}
        {{/content.for}}
    {{/nypr-player}}
  {{/liquid-if}}
{{/nypr-player-integration}}
{{#liquid-if modal class="modal-wrapper sliding-modal"}}
  {{#x-modal closeModal=(action 'closeModal')}}
    {{component modal}}
  {{/x-modal}}
{{/liquid-if}}
