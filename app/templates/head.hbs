{{#with model as |meta|}}
  <link rel="preconnect" href="{{meta.publisherAPI}}" crossorigin>
  <link rel="preconnect" href="https://www.googletagmanager.com" crossorigin>
  <title>{{meta.title}}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="description" content={{meta.description}}>
  <meta name="keywords" content={{meta.keywords}}>

  {{!-- Facebook --}}
  <meta property="fb:app_id" content="110716008996381">
  <meta property="fb:pages" content="151157061731" data-detail="WQXR">

  {{!-- Open Graph --}}
  <meta property="og:site_name" content="WQXR">
  <meta property="og:title" content={{meta.title}}>
  <meta property="og:url" content={{meta.url}}>
  <meta property="og:description" content={{meta.description}}>
  <meta property="og:type" content={{meta.type}}>
  {{#if meta.image.url}}
    <meta property="og:image" content={{meta.image.url}}>
    {{#if (and meta.image.w meta.image.h)}}
      <meta property="og:image:width" content={{meta.image.w}}>
      <meta property="og:image:height" content={{meta.image.h}}>
    {{/if}}
    {{#if meta.image.alt}}
      <meta property="og:image:alt" content={{meta.image.alt}}>
    {{/if}}
  {{/if}}

  {{!-- Twitter --}}
  <meta name="twitter:card" content={{meta.twitterCard}}>
  <meta name="twitter:site" content="@WQXR">
  <meta name="twitter:title" content={{meta.title}}>
  <meta name="twitter:description" content={{meta.description}}>
  {{#if meta.image.url}}
    <meta name="twitter:image" content={{meta.image.url}}>
    {{#if meta.image.alt}}
      <meta name="twitter:image:alt" content={{meta.image.alt}}>
    {{/if}}
  {{/if}}

  <meta name="apple-itunes-app"  app-id="464130298">

  {{#if meta.enableZendeskWidget}}
    <!-- Start of wqxr Zendesk Widget script -->
    <script id="ze-snippet" src="https://static.zdassets.com/ekr/snippet.js?key=117c7feb-6ac9-4cb4-a899-4bfe1b363368"> </script>
    <!-- End of wqxr Zendesk Widget script -->
  {{/if}}

  {{#each meta.feeds as |feed|}}
    <link rel="alternate" type={{feed.type}} title={{feed.title}} href={{feed.href}}>
  {{/each}}

  <link rel="canonical" href={{meta.url}}>
  <link rel="shortcut icon" href="{{meta.mediaRoot}}/static/img/favicon_wqxr.ico?_=1553611630">
{{/with}}
