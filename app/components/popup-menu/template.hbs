{{#click-outside action=(action 'closePopup')}}
<button class="popupmenu-button" {{action 'togglePopup'}}>
{{#if icon}}
  {{nypr-svg className="icon" icon=icon}}
{{/if}}
{{text}}
</button>
<div class="popupmenu-popup" style={{popupStyle}}>
  {{yield (action 'closePopup')}}
  <div class="popupmenu-popup-pointer" style={{pointerStyle}}></div>
</div>
{{/click-outside}}
